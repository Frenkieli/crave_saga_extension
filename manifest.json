{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "1.1",
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "icons": {
    "128": "icons/logo-disabled.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/logo-enabled.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["https://game.ero-labs.website/*/webGL.html*"],
      "js": ["content-script.js"]
    }
  ],
  "storage": {
    "managed_schema": "schema.json"
  }
}
